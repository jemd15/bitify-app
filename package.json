{
  "name": "bitify",
  "version": "1.0.0",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "env:dev": "cmd /c copy /Y \"env\\.env.development\" \".env\"",
    "env:prod": "cmd /c copy /Y \"env\\.env.prod\" \".env\"",
